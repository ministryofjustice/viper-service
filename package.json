{
  "name": "viper-service",
  "description": "A Restful service to provide access to the VIPER Rating for a known ID",
  "version": "1.0.1",
  "private": true,
  "author": "Ministry of Justice",
  "license": "MIT",
  "engines": {
    "npm": "^5.4.2",
    "node": "^8.9.3"
  },
  "main": "server.js",
  "scripts": {
    "start": "node server.js | bunyan -o short",
    "test": "./node_modules/.bin/mocha --exit",
    "test-report": "mocha --exit --reporter mocha-junit-reporter",
    "test-coverage": "nyc --silent=true --reporter=lcovonly --reporter=text-lcov npm test && cat ./coverage/lcov.info | codacy-coverage",
    "verify": "swagger project verify",
    "docs-test": "dredd ./api/swagger/swagger.yaml http://127.0.0.1:3000",
    "docs-render": "spectacle -t ./docs ./api/swagger/swagger.yaml",
    "setup-mssql": "node ./bin/setup-mssql",
    "knex": "knex",
    "knex-migrate": "knex-migrate",
    "migrate": "knex migrate:latest",
    "migrate-dry": "knex-migrate pending",
    "seed": "knex seed:run",
    "record-build-info": "node ./bin/record-build-info",
    "wait-for-deploy": "node ./bin/wait-for-deploy",
    "snyk": "snyk test",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "dependencies": {
    "applicationinsights": "^1.0.1",
    "azure-storage": "^2.7.0",
    "basic-auth": "^1.1.0",
    "body-parser": "^1.18.2",
    "bunyan": "^1.8.12",
    "bunyan-middleware": "^0.8.0",
    "debug": "^3.1.0",
    "express": "^4.16.2",
    "helmet": "^3.9.0",
    "js-yaml": "^3.10.0",
    "knex": "^0.14.2",
    "lodash": "^4.17.4",
    "moment": "^2.19.4",
    "mssql": "^4.1.0",
    "request": "^2.83.0",
    "request-promise": "^4.2.1",
    "sleep-promise": "^2.0.0",
    "swagger-ui-express": "^2.0.13",
    "tedious": "^2.1.5",
    "tough-cookie": "^2.3.3"
  },
  "devDependencies": {
    "chai": "^4.0.2",
    "date-fns": "^1.29.0",
    "dredd": "^4.1.1",
    "knex-migrate": "^1.3.1",
    "mocha": "^4.0.0",
    "mocha-junit-reporter": "^1.15.0",
    "mocha-lcov-reporter": "^1.3.0",
    "mock-knex": "^0.4.0",
    "nyc": "^11.3.0",
    "snyk": "^1.59.1",
    "spectacle-docs": "^0.9.13",
    "supertest": "^3.0.0",
    "swagger-tools": "^0.10.1"
  },
  "snyk": true
}
