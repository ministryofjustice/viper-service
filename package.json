{
  "name": "viper-service",
  "description": "A Restful service to provide access to the VIPER Rating for a known ID",
  "version": "0.0.1",
  "private": true,
  "author": "Ministry of Justice",
  "license": "MIT",
  "engines": {
    "npm": "~3.9.5",
    "node": "~6.11.1"
  },
  "main": "server.js",
  "scripts": {
    "start": "node server.js | bunyan -o short",
    "test": "mocha",
    "test-report": "mocha --reporter mocha-junit-reporter",
    "verify": "swagger project verify",
    "docs-test": "dredd ./api/swagger/swagger.yaml http://127.0.0.1:3000",
    "docs-render": "spectacle -t ./docs ./api/swagger/swagger.yaml",
    "setup-mssql": "node ./bin/setup-mssql",
    "knex": "knex",
    "knex-migrate": "knex-migrate",
    "migrate": "knex migrate:latest",
    "migrate-dry": "knex-migrate pending",
    "seed": "knex seed:run",
    "record-build-info": "node ./bin/record-build-info",
    "wait-for-deploy": "node ./bin/wait-for-deploy",
    "snyk": "snyk test",
    "snyk-protect": "snyk protect",
    "prepare": "npm run snyk-protect"
  },
  "dependencies": {
    "applicationinsights": "~1.0.1",
    "azure-storage": "~2.3.0",
    "basic-auth": "~1.1.0",
    "body-parser": "~1.18.2",
    "bunyan": "~1.8.12",
    "bunyan-middleware": "~0.8.0",
    "express": "~4.15.3",
    "helmet": "~3.6.1",
    "js-yaml": "~3.9.0",
    "knex": "~0.13.0",
    "lodash": "~4.17.4",
    "mssql": "~3.3.0",
    "request": "~2.81.0",
    "request-promise": "~4.2.1",
    "sleep-promise": "~2.0.0",
    "snyk": "~1.41.1",
    "swagger-ui-express": "~2.0.13",
    "tedious": "~2.1.5"
  },
  "devDependencies": {
    "chai": "~4.0.2",
    "date-fns": "~1.28.5",
    "dredd": "~4.1.1",
    "knex-migrate": "~1.3.0",
    "mocha": "~3.4.2",
    "mocha-junit-reporter": "~1.15.0",
    "mock-knex": "~0.3.9",
    "spectacle-docs": "~0.9.13",
    "supertest": "~3.0.0",
    "swagger-tools": "~0.10.1"
  },
  "snyk": true
}
