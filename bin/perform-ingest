#!/usr/bin/env node

const createDb = require('../server/db');
const ingester = require('../api/datasources/ingester');
const log = require('../server/log');


log.info("Performing ingest by script..");
let exitCode = 0;
ingester.ingest(createDb())
    .then(() => log.info("done."))
    .catch((err) => {
      log.error(err);
      exitCode = 1;
    })
    .then(() => process.exit(exitCode));

